<Alloy>
    <Window>
        <ListView id="listContactos" defaultItemTemplate="template">

            <!-- The Templates tag sets the ListView's templates property -->
            <Templates>
                <!-- Define your item templates within the Templates tags or use the
                           Require tag to include a view that only contains an ItemTemplate -->
                <ItemTemplate name="templateContacto">
                    <ImageView bindId="avatar" id="avatar"/>
                    <Label bindId="nombre" id="nombre"/>
                    <!-- <Label bindId="es_info" id="subtitle"/> -->
                </ItemTemplate>
            </Templates>

            <ListSection name="contactos"></ListSection>
        </ListView>
    </Window>
</Alloy>
